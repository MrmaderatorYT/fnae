<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".Game">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/logoLoading"
        android:elevation="999dp"
        android:layout_centerInParent="true"/>
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bgInCamera"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/bgInelevator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

    <Button
        android:id="@+id/openCamera"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:elevation="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/energy"
        android:background="@drawable/black_bg"
        android:elevation="5dp"
        android:textSize="35sp"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="25sp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:id="@+id/closeDoor"
        android:translationY="2dp"
        android:elevation="1dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/makeLoud"
        android:elevation="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25sp"
        android:text="Испугать"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cam1"
        android:text="Камера №1"
        android:background="@drawable/black_bg"
        android:layout_marginTop="20sp"
        android:layout_below="@id/makeLoud"
        android:layout_alignParentRight="true"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/black_bg"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text=""
        android:layout_below="@id/energy"
        android:layout_marginLeft="25sp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>
    <View
        android:id="@+id/palka1"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cam1" />
    <View
        android:id="@+id/palka2"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cam2" />
    <View
        android:id="@+id/palka3"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="160sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cam2" />
    <View
        android:id="@+id/palka5"
        android:layout_width="2dp"
        android:layout_height="140dp"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="300sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cam5" />
    <View
        android:id="@+id/palka6"
        android:layout_width="2dp"
        android:layout_height="100dp"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cam3" />

    <View
        android:id="@+id/palka4"
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40sp"
        android:layout_above="@id/cam4"
        />
    <View
        android:id="@+id/palka7"
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:background="#FFFF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40sp"
        android:layout_marginTop="25sp"
        android:layout_below="@id/cam3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/black_bg"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/cam2"
        android:text="Камера №2"
        android:layout_below="@id/palka1"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/black_bg"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/cam3"
        android:text="Камера №3"
        android:layout_marginRight="50sp"
        android:layout_below="@id/palka1"
        android:textSize="25sp"
        android:layout_marginTop="60sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/black_bg"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/cam4"
        android:text="Камера №4"
        android:layout_marginRight="150sp"
        android:layout_below="@id/palka1"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/black_bg"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/cam5"
        android:text="Камера №5"
        android:layout_marginTop="20sp"
        android:layout_marginRight="180sp"
        android:layout_below="@id/makeLoud"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/black_bg"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/cam6"
        android:text="Камера №6"
        android:layout_marginTop="190sp"
        android:layout_marginRight="180sp"
        android:layout_below="@id/makeLoud"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/black_bg"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/cam7"
        android:text="Ты"
        android:layout_marginTop="250sp"
        android:layout_marginRight="100sp"
        android:layout_below="@id/makeLoud"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:elevation="2dp"/>


</RelativeLayout>